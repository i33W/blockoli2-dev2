{
  "name": "blockoli",
  "version": "2.0.26",
  "description": "Brockoli is a block coding editor for Arduino.",
  "main": "main/main.js",
  "scripts": {
    "start": "SET \"NODE_ENV=develop\" && electron .",
    "test": "SET \"NODE_ENV=develop2\" && electron .",
    "publish": "SET \"NODE_ENV=production\" && electron-builder --win -p always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i33W/blockoli2-dev2.git"
  },
  "author": {
    "url": "https://pf.kakao.com/_CBvNxb/chat",
    "name": "BP LAB",
    "email": "bpcode@naver.com"
  },
  "contributes": {
    "name": "Hwang bomee",
    "email": "hwangbomee@kakao.com"
  },
  "devDependencies": {
    "electron": "^16.0.7",
    "electron-builder": "^22.14.13",
    "pug": "^3.0.2"
  },
  "dependencies": {
    "@serialport/parser-readline": "^9.2.4",
    "electron-log": "^4.4.6",
    "electron-prompt": "^1.7.0",
    "iconv-lite": "^0.6.3",
    "serialport": "^9.2.8",
    "electron-updater": "^4.3.9"
  },
  "build": {
    "productName": "Blockoli2 Test",
    "appId": "com.github.i33w.blockoli2-dev2",
    "asar": false,
    "publish": [
      {
        "provider": "github",
        "owner": "i33w",
        "repo": "blockoli2-dev2"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "./renderer/img/favicon.ico"
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "oneClick": true,
      "perMachine": true,
      "language": 1042,
      "include": "build/installer.nsh"
    },
    "directories": {
      "output": "./dist/"
    },
    "files": [
      "!.vscode${/*}"
    ]
  }
}
